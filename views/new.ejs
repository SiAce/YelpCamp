<% include partials/header %>

<div class="container">
  <div class="row text-center">
    <div class="col">
      <h1>Create a New Campground</h1>
    </div>
  </div>
  <form action="/campgrounds" method="POST">
    <div class="form-group">
      <label for="name-input">Name</label>
      <input type="text" class="form-control" id="name-input" name="name" placeholder="name" required>
    </div>
    <div class="form-group">
      <label for="image-input">Image URL</label>
      <input type="text" class="form-control" id="image-input" name="image" placeholder="image url" required>
    </div>
    <div class="form-group">
      <label for="desc-input">Description</label>
      <input type="text" class="form-control" id="desc-input" name="desc" placeholder="description" required>
    </div>
    <button class="btn btn-lg btn-primary">Submit!</button>
  </form>
  <a href="/campgrounds">Go Back</a>
</div>

<% include partials/footer %>
