<% include ../partials/header %>

<div class="container">
  <div class="row">
    <div class="col-md-3">
      <p class="lead">YelpCamp</p>
      <div class="list-group">
        <li class="list-group-item active">Info 1</li>
        <li class="list-group-item">Info 2</li>
        <li class="list-group-item">Info 3</li>
      </div>
    </div>
    <div class="col-md-9">
      <div class="card">
        <img src="<%= campground.image %>" class="card-img-top">
        <div class="card-body">
          <h4 class="card-title"><%= campground.name %></h4>
          <p class="card-text"><%= campground.description %></p>
          <h5 class="card-text text-danger text-right text-large">$9.00/night</h5>
        </div>
      </div>
      <div class="card my-4">
        <div class="card-header">
          Reviews
        </div>
        <div class="card-body">
          <div class="row justify-content-between">
            <div class="col-6">

            </div>
            <div class="col-6">
              <p class="text-right">
                <a class="btn btn-success" href="/campgrounds/<%= campground._id %>/comments/new">Add a New Review</a>
              </p>
            </div>
          </div>

          <p class="card-text"><% campground.comments.forEach((comment) => { %>
            <hr>
            <p><b><%= comment.author %></b>:</p>
            <p><%= comment.text %> <span class="float-right" >19 days ago</span></p>
            <% }); %>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>







<% include ../partials/footer %>