<% include ../partials/header %>

<div class="container">
  <div class="row text-center">
    <div class="col">
      <h1>Edit Campground: <%= campground.name %></h1>
    </div>
  </div>
  <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
    <div class="form-group">
      <label>Name</label>
      <input type="text" class="form-control" name="campground[name]" value="<%= campground.name %>" required>
    </div>
    <div class="form-group">
      <label>Price</label>
      <input type="number" class="form-control" name="campground[price]" value="<%= campground.price %>" min="0.00" step="0.01" required>
    </div>
    <div class="form-group">
      <label>Image URL</label>
      <input type="text" class="form-control" name="campground[image]" value="<%= campground.image %>" required>
    </div>
    <div class="form-group">
      <label>Description</label>
      <input type="text" class="form-control" name="campground[description]" value="<%= campground.description %>" required>
    </div>
    <button class="btn btn-lg btn-primary">Submit!</button>
  </form>
  <a href="/campgrounds">Go Back</a>
</div>

<% include ../partials/footer %>
