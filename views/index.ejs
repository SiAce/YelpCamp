<% include partials/header %>

<div class="container">

  <div class="jumbotron">
    <h1 class="display-4">This Is the Campgrounds</h1>
    <p class="lead">View our hand-picked campgrounds from all over the world!!</p>
    <hr class="my-4">
    <p>You can also contribute to this open-source project!</p>
    <a class="btn btn-primary btn-lg" href="/campgrounds/new" role="button">Add New Campground</a>
  </div>
  
  <div class="row">
    <% campgrounds.forEach( (campground) => { %>
      <div class="col">
        <div class="card my-2" style="width: 18rem;">
            <img src="<%= campground.image %>" class="card-img-top" alt="...">
            <div class="card-body">
              <h5 class="card-title"><%= campground.name %></h5>
              <p class="card-text"><%= campground.desc %></p>
              <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
            </div>
          </div>
      </div>
    <% }); %>
  </div>

</div>

<% include partials/footer %>
